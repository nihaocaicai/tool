<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tool.api.dao.UserDao">

    <resultMap id="userMap" type="com.tool.api.entity.User">
        <id property="user_id" column="user_id"/> <!--id-->
        <result property="user_name" column="user_name"/>
        <result property="user_avatar" column="user_avatar"/>
        <result property="user_gender" column="user_gender"/>
        <result property="user_city" column="user_city"/>
        <result property="user_target" column="user_target"/>
        <result property="user_motto" column="user_motto"/>
    </resultMap>

    <!--
     	根据id查询用户信息
    	public User findUserById(String id);
      -->
    <select id="findUserById" parameterType="String" resultType="user">
        select * from user where user_id=#{id}
    </select>
    
    
    <!-- 
    	插入一个新的用户
    	public void insertUser(User user);
     -->
    <insert id="insertUser" parameterType="com.tool.api.entity.User">
    	insert into user(user_id, user_name, user_avatar, user_gender, user_city, user_target, user_motto) 
    	values (#{user_id}, #{user_name}, #{user_avatar}, #{user_gender}, #{user_city}, #{user_target}, #{user_motto})
    </insert>
    
    <!-- 
    	更新某个用户信息
    	public void updateUser(User user);
     -->
     <update id="updateUser">
     	update user 
     		set user_name = #{user_name}, user_avatar = #{user_avatar}, user_gender = #{user_gender}, user_city = #{user_city},
     			user_target = #{user_target}, user_motto = #{user_motto} 
     			where user_id = #{user_id}
     </update>
     
     <!-- 
     	删除某个用户
     	public void deleteUser(String id);
      -->
     <delete id="deleteUser">
     	delete from user where user_id = #{id}
     </delete>
</mapper>
